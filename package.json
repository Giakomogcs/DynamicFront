{
  "name": "dynamic-front-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "generate": "npx prisma generate --schema=./server/prisma/schema.prisma",
    "migrate": "npx prisma migrate dev --schema=./server/prisma/schema.prisma",
    "dev": "npm run db:up && npm run generate && npm run migrate && concurrently \"npm run api --workspace=server\" \"npm run dev --workspace=client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\"",
    "prisma:studio": "npx prisma studio --schema=./server/prisma/schema.prisma",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}